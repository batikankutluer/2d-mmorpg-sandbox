{
  "name": "luanti",
  "version": "1.0.0",
  "description": "Web3 Minecraft benzeri 2D oyun",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch src -e ts,html,css --exec \"npm run build && npm start\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "copy-assets": "cp -r src/views dist/ && cp -r src/public dist/",
    "postbuild": "npm run copy-assets"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/batikankutluer/2d-mmorpg-sandbox.git"
  },
  "keywords": [
    "web3",
    "game",
    "minecraft",
    "2d",
    "sandbox"
  ],
  "author": "Batikan Kutluer <batikankutluer@proton.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/batikankutluer/2d-mmorpg-sandbox/issues"
  },
  "homepage": "https://github.com/batikankutluer/2d-mmorpg-sandbox#readme",
  "dependencies": {
    "express": "^4.21.2",
    "ethers": "^6.11.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
